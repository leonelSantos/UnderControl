{
  "name": "under-control",
  "version": "1.0.0",
  "description": "Personal finance tracking desktop application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "webpack serve --mode development --port 3000",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron . --dev",
    "build": "npm run build:react && electron-builder",
    "build:react": "webpack --mode production",
    "dist": "npm run build:react && electron-builder --publish=never",
    "electron": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["electron", "finance", "tracker", "budget", "savings"],
  "author": "Leo Santos",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "html-webpack-plugin": "^5.5.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "@babel/core": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.2",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@mui/material": "^5.14.0",
    "@mui/icons-material": "^5.14.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "chart.js": "^4.4.0",
    "react-chartjs-2": "^5.2.0",
    "electron-store": "^8.1.0",
    "sql.js": "^1.10.3",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.undercontrol.finance-tracker",
    "productName": "Under Control: Personal Finance Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "database.js",
      "build/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.finance"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}